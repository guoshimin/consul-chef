#!/bin/bash

docker run -d \
  --net host \
  --name consul \
  --restart=always \
  --log-driver=journald \
  -v /apps/consul/data:/consul/data \
  -v /apps/consul/config:/consul/config \
  -e CONSUL_GID=<%= node['consul']['gid'] %> \
  -e CONSUL_UID=<%= node['consul']['uid'] %> \
  <%= node['consul']['image']['tag'] %> \
  /create_user_once.sh && exec sudo -u consul /databricks/consul/consul \
  agent \
  -bootstrap-expect=3 \
  -node=<%= node['name'] %> \
  -config-dir=/consul/config
